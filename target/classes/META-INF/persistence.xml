<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

<persistence-unit name="tj">

 <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

 <class>import br.com.rafagonc.tjdata.models.ESAJProcesso</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJPartesProcesso</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJMovimentacao</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJPeticaoDiversa</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJDadosProcesso</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJComposicaoJulgamento</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJJulgamento</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJSubprocesso</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJApensosVinculados</class>
 <class>import br.com.rafagonc.tjdata.models.ESAJNumeroPrimeiraInstancia</class>

 <properties>
  <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
  <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/tj" />
  <property name="javax.persistence.jdbc.user" value="rafagonc" />
  <property name="javax.persistence.jdbc.password" value="cocacola" />
  <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
  <property name="hibernate.show_sql" value="true" />
  <property name="hibernate.format_sql" value="true" />
  <property name="hibernate.hbm2ddl.auto" value="create-drop" />
 </properties>
</persistence-unit>
</persistence>